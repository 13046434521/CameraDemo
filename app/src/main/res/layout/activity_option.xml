<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/icon_vivo2"
    tools:context=".detail.OptionActivity">

    <RadioGroup
        android:id="@+id/rg_option_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_select_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2340x1080"/>

        <RadioButton
            android:id="@+id/rb_select_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1920x1440"/>

        <RadioButton
            android:id="@+id/rb_select_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1920x1080"/>

        <RadioButton
            android:id="@+id/rb_select_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1440x1080"/>

        <RadioButton
            android:id="@+id/rb_select_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1280x720"/>

        <RadioButton
            android:id="@+id/rb_select_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="640x480"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_option_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rg_option_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <RadioButton
            android:id="@+id/rb_select_rgb_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RGB_BACK"/>

        <RadioButton
            android:id="@+id/rb_select_rgb_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RGB_FRONT"/>

        <RadioButton
            android:id="@+id/rb_select_depth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEPTH"/>

        <RadioButton
            android:id="@+id/rb_select_ir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IR"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_option_preview"
        style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="StartPreview"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>